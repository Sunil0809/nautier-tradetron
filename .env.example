"""Environment configuration file"""
# FastAPI Settings
DEBUG=True
APP_NAME=AlgoTradingPlatform
APP_VERSION=0.1.0

# Database (PostgreSQL)
# For local development:
DATABASE_URL=postgresql://postgres:postgres@localhost/algo_platform

# Redis
